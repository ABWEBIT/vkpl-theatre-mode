{
  "name": "VKPL Theatre mode",
  "version": "0.2",
  "manifest_version": 3,
  "description": "VKPL Theatre mode in a window",
  "action": {
    "default_icon": "vkpl-off.png",
    "default_title": "VKPL Theatre mode"
  },
  "content_scripts": [{
      "matches": ["https://vkplay.live/*"],
      "run_at": "document_start",
      "js": ["background.js"]
  }],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://vkplay.live/*"
  ],
  "background": {
    "service_worker": "worker.js",
    "type": "module"
  }
}
