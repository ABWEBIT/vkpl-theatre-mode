{
  "name": "VKPL Theatre mode",
  "version": "0.2",
  "manifest_version": 3,
  "description": "VKPL Theatre mode in a window",
  "action": {
    "default_icon": "vkpl.png",
    "default_title": "Open menu",
    "default_popup": "extension.html"
  },
  "content_scripts": [{
      "matches": ["https://vkplay.live/*"],
      "js": ["worker.js"]
  }],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ]
}
